<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list"
    android:minHeight="70dp" >

    <ImageView
        android:id="@+id/img_friendlist_head"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/left_login_up" />

    <TextView
        android:id="@+id/tv_friendlist_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/img_friendlist_visiable"
        android:layout_toRightOf="@+id/img_friendlist_head"
        android:singleLine="true"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/img_friendlist_visiable"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ico_friend_up" />

</RelativeLayout>