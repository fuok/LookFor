<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="150dp" >

    <ImageView
        android:id="@+id/img_head_portrait"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/selector_left_login" />

    <TextView
        android:id="@+id/tv_head_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_head_portrait"
        android:text="@string/click_on_login"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_head_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_head_portrait"
        android:text="@string/click_on_login"
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>